    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.homepage.HomePageFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageview_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/roundimage"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/startingpage1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageview_profile"
            app:layout_constraintTop_toTopOf="parent"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/welcome"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                tools:text="profile name"

                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_your_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How's Your Mood today?"
        app:layout_constraintTop_toBottomOf="@id/cl_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="24dp"
        android:textColor="@color/purple"/>
    <TextView
        android:id="@+id/tv_latest_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your mood to get suitable music \nrecommendations."
        app:layout_constraintTop_toBottomOf="@id/tv_your_history"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-8dp"
        />
    <Button
